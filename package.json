{
    "name": "rokfor-writer",
    "author": "Rokfor & Urs Hofer",
    "homepage": "http://www.rokfor.ch/",
    "private": false,
    "version": "2.0.16",
    "license": "mit",
    "main": "./www/index.js",
    "scripts": {
        "ionic:build": "ionic-app-scripts build",
        "ionic:serve": "ionic-app-scripts serve",
        "electron:start": "./electron-run.sh",
        "electron:compile": "./electron-build.sh",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "publish": "build -p always"
    },
    "build": {
        "appId": "com.github.rokfor.rokfor-writer",
        "productName": "Rokfor Writer",
        "mac": {
            "category": "rokfor.writer",
            "target": [
                "zip",
                "dmg"
            ]
        },
        "publish": [
            {
                "provider": "github",
                "owner": "rokfor",
                "repo": "rokfor-writer",
                "releaseType": "release"
            }
        ]
    },
    "dependencies": {
        "@angular/common": "^6.1.2",
        "@angular/compiler": "^6.1.2",
        "@angular/compiler-cli": "^6.1.2",
        "@angular/core": "^6.1.2",
        "@angular/forms": "^6.1.2",
        "@angular/http": "^6.1.2",
        "@angular/platform-browser": "^6.1.2",
        "@angular/platform-browser-dynamic": "^6.1.2",
        "@ionic-native/core": "^4.11.0",
        "@ionic-native/printer": "^4.11.0",
        "@ionic-native/splash-screen": "^4.11.0",
        "@ionic-native/status-bar": "^4.11.0",
        "@ionic/app-scripts": "^3.1.11",
        "@ionic/storage": "^2.1.3",
        "@types/pouchdb": "^6.3.2",
        "app": "^0.1.0",
        "browser-window": "^0.4.0",
        "cordova-ios": "^4.5.5",
        "cordova-plugin-console": "^1.1.0",
        "cordova-plugin-device": "^2.0.2",
        "cordova-plugin-ionic-keyboard": "^2.1.2",
        "cordova-plugin-ionic-webview": "^2.0.2",
        "cordova-plugin-printer": "^0.7.3",
        "cordova-plugin-splashscreen": "^5.0.2",
        "cordova-plugin-statusbar": "^2.4.2",
        "cordova-plugin-whitelist": "^1.3.3",
        "cordova-sqlite-storage": "^2.3.3",
        "de.appplant.cordova.plugin.printer": "^0.7.3",
        "electron-log": "^2.2.16",
        "electron-updater": "^3.1.1",
        "fs": "^0.0.1-security",
        "ionic-angular": "^3.9.2",
        "ionicons": "^4.3.0",
        "libstl": "^0.1.22",
        "mobx": "^5.0.3",
        "ng2-prosemirror": "^1.1.5",
        "pouchdb": "^7.0.0",
        "pouchdb-adapter-idb": "^7.0.0",
        "rxjs": "^6.2.2",
        "rxjs-compat": "^6.2.2",
        "showdown": "^1.8.6",
        "sw-toolbox": "^3.6.0",
        "zone.js": "^0.8.26"
    },
    "devDependencies": {
        "@types/showdown": "^1.7.5",
        "electron": "^2.0.7",
        "electron-builder": "^20.27.1",
        "node-pre-gyp": "^0.11.0",
        "typescript": "^3.0.1"
    },
    "cordovaPlugins": [
        "cordova-plugin-whitelist",
        "cordova-plugin-statusbar",
        "cordova-plugin-console",
        "cordova-plugin-device",
        "cordova-plugin-splashscreen",
        "cordova-plugin-printer",
        "ionic-plugin-keyboard"
    ],
    "cordovaPlatforms": [
        "ios",
        {
            "platform": "ios",
            "version": "",
            "locator": "ios"
        }
    ],
    "description": "Rokfor Writer: Editor for the Rokfor Writer Project.",
    "cordova": {
        "plugins": {
            "cordova-plugin-printer": {},
            "cordova-sqlite-storage": {},
            "de.appplant.cordova.plugin.printer": {},
            "cordova-plugin-whitelist": {},
            "cordova-plugin-statusbar": {},
            "cordova-plugin-console": {},
            "cordova-plugin-device": {},
            "cordova-plugin-splashscreen": {},
            "cordova-plugin-ionic-webview": {},
            "cordova-plugin-ionic-keyboard": {},
            "cordova-plugin-sqlite-2": {}
        },
        "platforms": [
            "ios"
        ]
    }
}
